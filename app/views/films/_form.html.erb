<%= form_for(@film) do |f| %>
  <% if @film.errors.any? %>
    <div id="error_explanation">
      <h2><%=@film.errors.count %></h2>

      <ul>
      <% @film.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name ,'Movie' %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :director, 'director' %><br />
    <%= f.text_field :director %>
  </div>
  <div class="field">
    <%= f.label :actors, 'actors' %><br />
    <%= f.text_field :actors %>
  </div>
 
  <div class="field">
    <%= f.label :description, 'description' %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
